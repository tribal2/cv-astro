---
import NameLink from './NameLink.astro';
import type { IOrganization } from '../cv';

interface Props extends IOrganization {
  current?: boolean;
  currentLabel?: string;
}

const { city, country, remarks, current, currentLabel } = Astro.props;
---
<div class="flex justify-between items-center text-base border-b border-gray-200 gap-x-1">
  <div class="flex flex-col justify-start">
    <NameLink {...Astro.props} />
    {remarks && (
      <span class="text-[0.6em]/[1.5em] font-light text-gray-500">
        {remarks}
      </span>
    )}
  </div>

  <span class="inline-flex gap-x-1 whitespace-nowrap">
    <div class="hidden md:inline-flex items-center rounded-md border px-2 py-0.5 font-semibold font-mono transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 text-nowrap border-transparent bg-gray-100 hover:bg-gray-500/20 align-middle text-xs">
      {city && `${city} - `}
      {country}
    </div>
    {current && (
      <div class="hidden md:inline-flex items-center rounded-md border px-2 py-0.5 font-semibold font-mono transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 text-nowrap border-transparent bg-green-50 hover:bg-green-100 align-middle text-xs">
        {currentLabel || 'Current'}
      </div>
    )}
  </span>
</div>
