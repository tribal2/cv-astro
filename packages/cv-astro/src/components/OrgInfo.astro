---
import NameLink from './NameLink.astro';
import type { IOrganization } from '../cv';
import CvBadge from './CvBadge.astro';

interface Props extends IOrganization {
  current?: boolean;
  currentLabel?: string;
}

const { city, country, remarks, current, currentLabel } = Astro.props;
---
<div class="flex justify-between items-center text-base border-b border-gray-200 gap-x-1">
  <div class="flex flex-col justify-start">
    <NameLink {...Astro.props} />
    {remarks && (
      <span class="text-[0.6em]/[1.5em] font-light text-gray-500">
        {remarks}
      </span>
    )}
  </div>

  <span class="inline-flex gap-x-1 whitespace-nowrap">
    <CvBadge>
      {city && `${city} - `}
      {country}
    </CvBadge>
    {current && (
      <CvBadge variant="green">
        {currentLabel || 'Current'}
      </CvBadge>
    )}
  </span>
</div>
