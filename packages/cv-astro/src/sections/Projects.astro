---
import ProjectCard from '../components/ProjectCard.astro';
import type { IProject } from '../cv';

interface Props {
  data: IProject[];
}

const { data } = Astro.props;
---

<section class="flex min-h-0 flex-col gap-y-3 print-force-new-page scroll-mb-16">
  <h2 class="text-xl font-bold">Projects</h2>
  <div class="-mx-3 grid grid-cols-1 gap-3 print:grid-cols-3 print:gap-2 md:grid-cols-2 lg:grid-cols-3">
    {data.map(project => (
      <ProjectCard {...project} />
    ))}
  </div>
</section>
