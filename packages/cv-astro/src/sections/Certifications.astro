---
import SectionWrapper from '../components/SectionWrapper.astro';
import type { ICertification } from '../cv';
import CertificationCard from '../icons/CertificationCard.astro';

interface Props {
  data: ICertification[];
}

const { data } = Astro.props;
---
<SectionWrapper title="Certifications">
  <div class="-mx-3 grid grid-cols-1 gap-3 print:grid-cols-3 print:gap-2 sm:grid-cols-2">
    {data.map(cert => (
      <CertificationCard {...cert} />
    ))}
  </div>
</SectionWrapper>
