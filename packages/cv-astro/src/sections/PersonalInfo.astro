---
import AddressIcon from "../icons/AddressIcon.astro";
import SocialIcons from "../components/SocialIcons.astro";
import type { IPersonalInfo } from "../cv";

interface Props extends IPersonalInfo {}

const info = Astro.props;
const mailto = `mailto:${info.email}`;
const telto = `tel:${info.phone}`;
---

<div class="flex items-center justify-between">
  <div class="flex-1 space-y-1.5">
    <h1 class="text-2xl font-bold">{info.name}</h1>
    <p class="max-w-md text-pretty font-mono text-sm text-gray-500">
      {info.title}
    </p>
    <p
      class="max-w-md items-center text-pretty font-mono text-xs text-gray-500"
    >
      <a
        class="inline-flex gap-x-1.5 align-baseline leading-none hover:underline"
        href={info.addressUrl}
        target="_blank"
      >
        <AddressIcon class="size-3" />
        {info.address}, {info.timezone}
      </a>
    </p>
    <SocialIcons {...Astro.props} />
    <div class="hidden flex-col gap-x-1 font-mono text-sm text-gray-500 print:flex">
      <a href={mailto}>
        <span class="underline">{info.email}</span>
      </a>
      <a href={telto}>
        <span class="underline">{info.phone}</span>
      </a>
    </div>
  </div>
  <span class="relative flex shrink-0 overflow-hidden rounded-xl h-28 w-28">
    <span class="flex h-full w-full items-center justify-center rounded-xl bg-muted">
      RTH
      <!-- @todo: include a photo here -->
    </span>
  </span>
</div>
<section class="flex min-h-0 flex-col gap-y-3">
  <h2 class="text-xl font-bold">About</h2>
  <p class="text-pretty font-mono text-sm text-gray-500">
    {info.summary}
  </p>
</section>
